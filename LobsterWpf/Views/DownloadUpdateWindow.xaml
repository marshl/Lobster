<Window x:Class="LobsterWpf.DownloadUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LobsterWpf"
        mc:Ignorable="d"
        Title="DownloadUpdateWindow" Height="125" Width="300" Background="{StaticResource BackgroundKey}" ShowInTaskbar="False" Icon="Resources/Images/cartoon-lobster.ico" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterOwner">

  <StackPanel Orientation="Vertical">
    <Label x:Name="DownloadProgressLabel" HorizontalAlignment="Left" Content="Download Pending..." VerticalAlignment="Center" Margin="10"/>
    <ProgressBar Name="DownloadProgressBar" HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="250"/>
    <Button Content="Cancel" Margin="0,10,10,0" HorizontalAlignment="Right" Width="100" Click="CancelButton_Click"/>
  </StackPanel>
</Window>
