<Window x:Class="LobsterWpf.ClobTypeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LobsterWpf"
        mc:Ignorable="d"
        Title="ClobTypeListWindow" Height="300" Width="300">
  <Grid>
    <ListBox ItemsSource="{Binding DatabaseConfigList}">
      <ListBox.ItemTemplate>
        <DataTemplate DataType="ClobTypeView">
          <StackPanel>
            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
            <TextBlock>
              <TextBlock.Text>
                <MultiBinding StringFormat="Host: {0}:{1}">
                  <Binding Path="Host" />
                  <Binding Path="Port" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
            <TextBlock>
              <TextBlock.Text>
                <MultiBinding StringFormat="SID: {0}">
                  <Binding Path="SID" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</Window>
